@model OverTheBoard.WebUI.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutAccount";
}

<h1 class="text-center">OverTheBoard</h1>
<h3>Sign in to an existing account</h3>
<form method="post">
    <div class="form-group">
        <label asp-for="EmailAddress">Email address</label>
        <input asp-for="EmailAddress" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" />
        <span asp-validation-for="EmailAddress"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input asp-for="RememberMe" type="checkbox"  class="custom-control-input">
        <label asp-for="RememberMe" class="custom-control-label">Remember Me</label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-white btn-block">Login</button>
    </div>
    <div class="form-group">
        <div class="text-left">
            <a class="float-right text-color" href="/Account/ForgotPassword">Forgot Password?</a>
        </div>
        <div class="text-left">
            Don't have an account? <a class="text-color" href="/Account/Register">Create One</a>
        </div>
    </div>

</form>