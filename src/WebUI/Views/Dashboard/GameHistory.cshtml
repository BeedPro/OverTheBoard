@model OverTheBoard.WebUI.Models.GameHistoryViewModel
@{
    int i = 1;
}
<div class="">
    @if (Model.gamesCompleted.Count > 0)
    {
        <table class="tg center-table">
            <thead>
                <tr>
                    <th class="tg-0pky">Game Number</th>
                    <th class="tg-0pky">White</th>
                    <th class="tg-0pky">Black</th>
                    <th class="tg-0pky">Game Link</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model.gamesCompleted)
                {
                    <tr>
                        <td class="tg-0pky"><span>@(i++)</span></td>
                        <td class="tg-0pky">@game.WhiteUser<br></td>
                        <td class="tg-0pky">@game.BlackUser</td>
                        <td class="tg-0pky"><a href="https://localhost:44305/play/game/@game.Identifier">Open Game</a></td>
                    </tr>
                }
            </tbody>
        </table>}
</div>
