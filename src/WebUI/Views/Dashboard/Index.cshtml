@model OverTheBoard.WebUI.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<header id="gtco-header" class="gtco-cover" role="banner">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1 small-pfp-correct-position">
                <img class="small-pfp" src="~/uploads/DisplayImages/@Model.DisplayImagePath" />
            </div>
            <div class="col-md-5">
                <br />
                <br />
                <h3 class="text-center" style="">
                    @Model.DisplayName
                </h3>
                <hr />
            </div>
            <div class="col-md-2">
            </div>
            <div class="col-md-4 big-pfp-correct-position">
                <img class="big-pfp" src="~/uploads/DisplayImages/@Model.DisplayImagePath" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-1"></div>
            <!--This would be the place where the ELO rating graph of the user is outputted, the image is just a placeholder for the graph-->
            <!--Graph can be made using html and jquery-->
            <div class="col-md-5 padding-100">
                <img class="graph-size" src="https://google.github.io/charts/flutter/example/bar_charts/spark_bar_full.png" alt="Place holder graph" />
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <div class="text-center center-button-on-dashboard">
                    @* This will be where the button sends the player depending on ranked (for now it has been defaulted to true all the time) *@
                    @if (true)
                    {<a asp-controller="Play" asp-action="Unranked" class="btn btn-white btn-block" type="button">Play</a> <br />}
                    else
                    { <a asp-controller="Play" asp-action="Brackets" class="btn btn-white btn-block" type="button">Play</a> <br />}
                    <a href="#" class="btn btn-white btn-block " type="button">Leaderboard</a><br />
                    <a href="#" class="btn btn-white btn-block" type="button">Analysis</a>
                </div>
            </div>
        </div>
        </div>
</header>
